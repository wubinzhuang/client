<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="dialogroot" prefHeight="300.0" prefWidth="400.0" stylesheets="@PageDialog.css"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fxclient.framework.controls.dialog.PageDialog">
    <children>
        <AnchorPane fx:id="titleBar" onMouseDragged="#mouseDragged" onMousePressed="#mousePressed"
                    onMouseReleased="#mouseReleased" prefHeight="30.0" AnchorPane.leftAnchor="2.0"
                    AnchorPane.rightAnchor="3.0" AnchorPane.topAnchor="2.0">
            <children>
                <Label fx:id="lblTitleText" styleClass="title-text" text="对话框" AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="90.0" AnchorPane.topAnchor="0.0">
                    <font>
                        <Font name="Microsoft YaHei Bold" size="14.0"/>
                    </font>
                </Label>
                <HBox layoutX="306.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="0.0">
                    <children>
                        <Button fx:id="btnMin" layoutX="73.0" layoutY="10.0" mnemonicParsing="false" prefHeight="25.0"
                                prefWidth="30.0" text="一" textFill="WHITE" AnchorPane.bottomAnchor="0.0"
                                AnchorPane.rightAnchor="60.0" AnchorPane.topAnchor="0.0">
                            <font>
                                <Font name="Microsoft YaHei Bold" size="12.0"/>
                            </font>
                        </Button>
                        <Button fx:id="btnMax" layoutX="296.0" layoutY="10.0" mnemonicParsing="false" prefHeight="25.0"
                                prefWidth="30.0" text="口" textFill="WHITE" AnchorPane.bottomAnchor="0.0"
                                AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="0.0"/>
                        <Button fx:id="btnClose" layoutX="63.0" mnemonicParsing="false" onAction="#closeDialog"
                                prefHeight="25.0" prefWidth="30.0" text="X" textFill="WHITE"
                                AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <font>
                                <Font name="Microsoft YaHei" size="12.0"/>
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
